<div class="py-5">
  <div class="container">
    <div class="row">
      <%= render "partials/panel"%>
      <div class="col-md-9">
        <div class="card  p-2" >
          <div class="card-body">
            <h1 class="mb-3 text-center">Resumen</h1>
            <h3 class="mb-2 text-center">Productos</h3>
            <ul class="list-group">
              
              <div class="col-md-10">
                <ul class="nav nav-tabs">
                  <li class="nav-item">
                    <a href="" class="active nav-link" data-toggle="tab" data-target="#tabone">Activadas</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="" data-toggle="tab" data-target="#tabtwo">Pausadas</a>
                  </li>
                  <li class="nav-item">
                    <a href="" class="nav-link" data-toggle="tab" data-target="#tabthree">Finalizadas</a>
                  </li>
                </ul>
                <div class="tab-content mt-2">
                  <div class="tab-pane fade show active" id="tabone" role="tabpanel">
                    <div class="card  p-2">
                      <div class="card-body">
                        <div class="row">
                          <% @products.each do |product|%>
                            <div class="col-md-5">
                              <%= "Producto ##{product.id}"%>
                              <p class="my-3">Producto # n</p>
                            </div>
                            <div class="col-md-3">
                              <%= "Disponibles $#{product.p_quantify}"%>
                              <p class="my-3">$ 114 * 4 disponibles</p>
                            </div>
                            <div class="col-md-2 text-right">
                              <div class="btn-group my-2">
                                <button class="btn dropdown-toggle btn-secondary" data-toggle="dropdown">
                                  <i class="fa fa-fw fa-asterisk"></i>
                                </button>
                                <div class="dropdown-menu" style="">
                                  <%= link_to 'Edit', edit_product_path(product), class:"dropdown-item" %>
                                  <td><%= link_to 'Eliminar', product, method: :delete, data: { confirm: 'Are you sure?' }, class:"dropdown-item btn btn-danger" %></td>
                                </div>
                              </div>
                            </div>
                          <%end%>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>              
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>