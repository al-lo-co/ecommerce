<div class="container py-5">
  <div class="row">
    <div class="col-md-12">
      <div class="card-body">
        <%= form_for @product,  builder: BootstrapFormBuilder do |form| %>
            <% if product.errors.any? %>
              <div class="row">
                <div id="error_explanation">
                  <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
                  <ul>
                  <% product.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="field">
                <%= form.label :name %>
                <%= form.text_field :p_name %>
              </div>

              <div class="field">
                <%= form.label :description %>
                <%= form.text_area :p_description %>
              </div>

              <div class="field">
                <%= form.label :price %>
                <%= form.text_field :p_price %>
              </div>

              <div class="field">
                <%= form.label :quantify %>
                <%= form.number_field :p_quantify %>
              </div>

              <div class="field">
                <%= form.label :send %>
                <%= form.text_field :p_send %>
              </div>

              <div class="field">
                <%= form.label :available %>
                <%= form.check_box :p_available %>
              </div>

              <div class="field col-md-4">
                Categorias <br>
                <% @categories.each do |category|%>
                  <%= category.name %>
                  <%= check_box_tag "categories[]", category.id%>
                <%end%>
                
              </div>

              <div class="actions">
                <%= form.submit %>
              </div>
            
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

