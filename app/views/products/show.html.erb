<div class="container py-5">
  <div class="row my-5">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body">
          <p>
            <strong>name:</strong>
            <%= @product.p_name %>
          </p>

          <p>
            <strong>description:</strong>
            <%= @product.p_description %>
          </p>

          <p>
            <strong>price:</strong>
            <%= @product.p_price %>
          </p>

          <p>
            <strong>quantify:</strong>
            <%= @product.p_quantify %>
          </p>

          <p>
            <strong>send:</strong>
            <%= @product.p_send %>
          </p>

          <p>
            <strong>available:</strong>
            <%= @product.p_available %>
          </p>

          <p>
            <strong>User:</strong>
            <%= @product.user.email %>
          </p>
          <% if can? :manage, @product %>
            <%= link_to 'Edit', edit_product_path(@product), class:"btn btn-primary" %> |
            <%= link_to 'Back', products_path, class:"btn btn-secundary" %>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
