<div class="container py-5">
  <div class="row my-5">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body">

          <h1>Products</h1>

          <table>
            <thead>
              <tr>
                <th>name</th>
                <th>description</th>
                <th>price</th>
                <th>quantify</th>
                <th>send</th>
                <th>available</th>
                <th>User</th>
                <th>Categorias</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @products.each do |product| %>
                <tr>
                  <td><%= product.p_name %></td>
                  <td><%= product.p_description %></td>
                  <td><%= product.p_price %></td>
                  <td><%= product.p_quantify %></td>
                  <td><%= product.p_send %></td>
                  <td><%= product.p_available %></td>
                  <td><%= product.user.email %></td>
                  <td>
                    <%product.categories.each do |category|%>
                      <%= link_to category.name, category %>
                    <%end%>                    
                  </td>
                  <td><%= link_to 'Show', product, class:"btn btn-primary" %></td>
                  <td><%= link_to 'Edit', edit_product_path(product), class:"btn btn-primary" %></td>
                  <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'New Product', new_product_path, class:"btn btn-primary" %>
          <%= link_to 'Atras',  home_administrator_path,  class:"btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
  <%= will_paginate @products %>
</div>
