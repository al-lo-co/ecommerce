<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="text-center" >
    <div class="container">
      <div class="row my-2">
        <div class="offset-md-1 col-10">
          <div class="card text-white p-5 bg-primary">
            <h1>Registro</h1>
            <form class="text-left">
              <div class="form-group"> 
                <label for="form16">Correo</label>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"goethe@werther.com", type:"email"%>
              </div>
              <div class="form-group"> 
                <label for="form17">Nombre</label>
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", placeholder:"Nombre", type:"text"%> 
              </div>
              <div class="form-group"> 
                <label for="form17">Avatar</label>
                <%= f.file_field :img, class:"form-control", type:"file"%> 
              </div>
              <div class="form-group"> 
                <label for="form18">Edad</label>
                <%= f.number_field :age, autofocus: true, autocomplete: "age", class:"form-control", placeholder:"Edad", type:"number"%> 
              </div>
              <div class="form-group"> 
                <label for="form18">Estado</label>
                <%= f.text_field :state, autofocus: true, autocomplete: "name", class:"form-control", placeholder:"Estado", type:"text"%> 
              </div>
              <div class="form-group"> 
                <label for="form18">Calle</label>
                <%= f.text_field :street, autofocus: true, autocomplete: "Calle", class:"form-control", placeholder:"Calle", type:"text"%> 
              </div>
              <div class="form-group"> 
                <label for="form18">Ciudad</label>
                <%= f.text_field :city, autofocus: true, autocomplete: "Ciudad", class:"form-control", placeholder:"Ciudad", type:"text"%> 
              </div>
              <div class="form-row">
                <div class="form-group col-md-6"> <label for="form19">Password</label> 
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password", type:"password", class:"form-control", placeholder:"••••" %>

                </div>
                <div class="form-group col-md-6"> 
                  <label for="form20">Confirm Password</label>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", type:"password", class:"form-control", placeholder:"••••" %>
                </div>
              </div>
              <button type="submit" class="btn btn-secondary">Registro</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>



<%= render "devise/shared/links" %>
