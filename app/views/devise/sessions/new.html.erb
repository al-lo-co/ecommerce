

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="py-5">
    <div class="container">
      <div class="row">
        <div> </div>
        <div class="offset-md-1 col-md-10">
          <div class="card text-white p-5 bg-primary" >
            <div class="card-body">
              <h1 class="mb-4 text-center">Iniciar Sesi√≥n</h1>
              <form>
                
                <div class="row">
                  <div class="col-md-3">
                    <div class="form-group">
                      <label>Correo</label>
                    </div>
                  </div>
                  <div class="col-md-9">
                    <div class="form-group">
                      <%= f.email_field :email,  autocomplete: "email", class: "form-control" %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-3">
                    <div class="form-group">
                      <label>Password</label>
                    </div>
                  </div>
                  <div class="col-md-9">
                    <div class="form-group">
                        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-9">
                    <div class="form-group"> 
                      <% if devise_mapping.rememberable? %>
                        <%= f.label :remember_me, class: "form-group" %>
                        <%= f.check_box :remember_me, class: "form-group form-control" %>
                      <%end%>
                    </div>
                  </div> 
                </div>           
                    <%= f.submit "Log in", class:"btn btn-secondary btn-block" %>
                  
                    <%= link_to "Registro", new_user_registration_path, class:"btn btn-secondary btn-block" %>

              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>



<%= render "devise/shared/links" %>
